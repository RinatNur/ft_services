server {
    listen 80;
    return 301 https://$host$request_uri;
}

server {
    listen 443 ssl;
    listen [::]:443 ssl;
    ssl_certificate /etc/nginx/ssl/my.crt;
    ssl_certificate_key /etc/nginx/ssl/your_domain.key;

    index index.html index.htm index.php;

    location / {
        autoindex on;
        try_files $uri $uri/ /index.php$is_args$args;
    }
}